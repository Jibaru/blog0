{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "files": {
    "experimentalScannerIgnores": ["**/*.css"]
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useConsistentArrayType": "error"
      },
      "suspicious": {
        "noUnknownAtRules": "off",
        "noDuplicateProperties": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5"
    }
  }
}
